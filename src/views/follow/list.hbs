<div class="container p-4">
    <div class="row">

        {{#each follow}}
            <div class="col-md-3 p-2">
                <div class="card text-center">
                    <div class="card-body">
                            <h4 class="card-title text-uppercase">
                                {{title}}
                            </h4>
                             <p class="m-2">Urgencia: <strong>{{ urgencia }}</strong></p>
                            <p class="m-2">{{ descripción }}</p> 
                            <p> {{timeAgo tiempoDeCreación}} </p>
                            <a href="/follow/delete/{{id}}" class="btn btn-danger btn-block"> Borrar Tarea</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-body">
                    <p class="text-center"><strong>No hay Tareas a Realizar</strong></p>
                </div>
            </div>
        {{/each}}
    </div>
</div>